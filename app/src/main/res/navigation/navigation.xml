<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/recipesListFragment">

    <fragment
        android:id="@+id/recipesListFragment"
        android:name="com.blogspot.soyamr.recipes2.presentation.recipeslist.RecipesListFragment"
        android:label="fragment_recipes_list"
        tools:layout="@layout/fragment_recipes_list">
        <action
            android:id="@+id/action_recipesListFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
        <action
            android:id="@+id/action_recipesListFragment_to_bottomSheetFragment"
            app:destination="@id/bottomSheetFragment" />

    </fragment>
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.blogspot.soyamr.recipes2.presentation.recipeitem.RecipeDetailsFragment"
        android:label="fragment_recipe_details"
        tools:layout="@layout/fragment_recipe_details">
        <argument
            android:name="RecipeId"
            app:argType="string" />
        <action
            android:id="@+id/action_recipeDetailsFragment_self"
            app:destination="@id/recipeDetailsFragment" />
        <action
            android:id="@+id/action_recipeDetailsFragment_to_imageViewerFragment"
            app:destination="@id/imageViewerFragment" />
    </fragment>

    <dialog
        android:id="@+id/bottomSheetFragment"
        android:name="com.blogspot.soyamr.recipes2.presentation.recipeslist.BottomSheetFragment"
        android:label="BottomSheetFragment" >
    </dialog>
    <fragment
        android:id="@+id/imageViewerFragment"
        android:name="com.blogspot.soyamr.recipes2.presentation.image_viewer.ImageViewerFragment"
        android:label="fragment_image_viewer"
        tools:layout="@layout/fragment_image_viewer" >
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
</navigation>